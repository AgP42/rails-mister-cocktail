<h1><%= @cocktail.name %></h1>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> (<%= dose.description %>) <%= link_to "Delete this ingredient", dose_path(dose), method: :delete %></li>
<% end %>
</ul>

<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Delete this cocktail", cocktail_path(@cocktail), method: :delete %>
<%= link_to "Back to the cocktail list", cocktails_path %>
